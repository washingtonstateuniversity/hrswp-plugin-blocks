		"@babel/runtime": "^7.13.10",
		"@wordpress/babel-preset-default": "^5.1.0",
		"@wordpress/dependency-extraction-webpack-plugin": "^3.1.0",
		"@wordpress/eslint-plugin": "^9.0.1",
		"@wordpress/npm-package-json-lint-config": "^4.0.1",
